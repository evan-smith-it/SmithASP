<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="~/lib/semantic-ui/semantic.css" />
    <link type="text/css" rel="stylesheet" href="~/layout.css" />
    <link type="text/css" rel="stylesheet" href="~/nav.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div id="wrapper">
        <nav>
            <ul>
                <li><a href="/Home/index">Login</a></li>
                <li><a href="/Crypto/index">Caesar Cipher</a></li>
            </ul>
        </nav>
        <div id="rightcol">
            <header><h1 id="headertext">@ViewBag.Title</h1></header>
            @await Html.PartialAsync("_TopUserMenu")
            <main>
                <div id="content">
                    @RenderBody()
                </div>
            </main>
            <footer>
                <p>@DateTime.Today.Year</p>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
