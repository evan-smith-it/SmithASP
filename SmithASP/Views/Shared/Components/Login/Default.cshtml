@model LoginViewModel
@{
    ViewData["Title"] = "Login Form";
}

<div>
    <h3>App Login Form</h3>
    <form asp-controller="Home" asp-action="Index" method="post" class="ui large form validate-me" role="form">
        <div class="ui stack segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Username" placeholder="Username" />
                    <span asp-validation-for="Username" style="color:red;"></span>
                </div>
            </div>

            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Password" placeholder="Password" />
                    <span asp-validation-for="Password" style="color:red;"></span>
                </div>
            </div>
            <div>
                <button class="ui blue button">
                    LOGIN
                </button>
            </div>
            <br />
            <div asp-validation-summary="All" class="ui error left" style="color:red;"></div>
        </div>
    </form>
</div>